        }
      }
    }

    // Add daily study reminder if no check-in today
    const { data: checkins } = await supabaseAdmin
      .from('checkins')
      .select('date');
    const today = new Date().toISOString().split('T')[0];
    const checkedInToday = checkins?.some(c => c.date === today);
    if (!checkedInToday) {
